@model PassengerTicketViewModel

@{
    ViewBag.Title = "View Bus Ticket";
}

<!--Progress Bar-->
<div class="progress" style="height: 30px;">
    <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
        <div class="text-center">1) Select Bus</div>
    </div>
    <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
        <div class="text-center">2) Book Seat</div>
    </div>
    <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
        <div class="text-center">3) Passenger Details</div>
    </div>
    <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
        <div class="text-center">4) Ticket Payment</div>
    </div>
    <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
        <div class="text-center">5) Download Ticket</div>
    </div>
</div>

<h2 class="text-center mt-3">View Bus Ticket</h2>
<hr class="bg-danger" />

<div class="card mb-3">
    <div class="card-header text-light bg-danger">
        Bus Ticket Details
    </div>
    <div class="card-body">
        <table class="table table-borderless">
            <tbody>
                <!--Ticket Details-->
                <tr>
                    <td><b>Ticket Id:</b></td>
                    <td>@Model.Ticket.TicketId</td>
                    <td><b>PNR Code:</b></td>
                    <td>@Model.Ticket.PNRCode</td>
                </tr>
                <tr>
                    <td><b>Source:</b></td>
                    <td>@Model.Ticket.Source</td>
                    <td><b>Destination:</b></td>
                    <td>@Model.Ticket.Destination</td>
                </tr>
                <tr>
                    <td><b>Departure Time:</b></td>
                    <td>@Model.Ticket.DepartureTime.ToShortTimeString()</td>
                    <td><b>Arrival Time:</b></td>
                    <td>@Model.Ticket.ArrivalTime.ToShortTimeString()</td>
                </tr>
                <tr>
                    <td><b>Date of Journey:</b></td>
                    <td>@Model.Ticket.DateOfJourney.ToLongDateString()</td>
                    <td><b>Ticket Price:</b></td>
                    <td><i class="fa fa-rupee"></i> @Model.Ticket.TicketPrice</td>
                </tr>
                <!--Bus Details-->
                <tr>
                    <td><b>Bus Name:</b></td>
                    <td>@Model.Ticket.BusName</td>
                    <td><b>Bus Vehicle No.:</b></td>
                    <td>@Model.Ticket.BusVehicleNumber</td>
                </tr>
                <!--Passenger Details-->
                <tr>
                    <td><b>Passenger Count:</b></td>
                    <td>@Model.Ticket.PassengerCount</td>
                </tr>
                @foreach (var passenger in Model.Passengers)
                {
                    <tr>
                        <td><b>Passenger Name:</b></td>
                        <td>@passenger.PName</td>
                        <td><b>Seat No.:</b></td>
                        <td>@passenger.PSeatNo</td>
                    </tr>
                    <tr>
                        <td><b>Age:</b></td>
                        <td>@passenger.PAge</td>
                        <td><b>Gender:</b></td>
                        <td>@passenger.PGender</td>
                    </tr>
                 } 
            </tbody>
        </table>
    </div>
</div>

<div class="text-danger text-center font-weight-bold">
    *Remember Ticket ID number
</div>

<!--Button Views-->
<div class="text-center text-light">
    <a asp-controller="Passenger" asp-action="Home" class="btn btn-danger">Back to Home Page</a>
</div>
