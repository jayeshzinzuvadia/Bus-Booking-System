@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Role List";
}

<h2 class="text-center">View Role List</h2>
<hr class="bg-danger" />

@if (Model.Any())
{
    <a class="btn btn-danger mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Admin">
        Add New Role
    </a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Role Id</th>
                <th>Role Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>                        
                    <td>
                        <form asp-action="DeleteRole" asp-controller="Admin" asp-route-id="@role.Id" method="post">
                            <a class="btn btn-outline-danger" asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id">Edit</a>
                            <button type="submit" class="btn btn-outline-danger" 
                                    onclick="return confirm('Are you sure you want to remove this role?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-danger" style="width:auto" asp-controller="Admin" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}
