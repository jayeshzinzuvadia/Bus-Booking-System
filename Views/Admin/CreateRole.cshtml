@model CreateRoleViewModel

@{
    ViewBag.Title = "Create Role";
}

<a asp-action="ListRoles" asp-controller="Admin" class="btn btn-danger">Back</a>

<h2 class="text-center">Create Role</h2>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!--Role Information-->
            <div class="card m-1">
                <div class="card-header bg-danger text-light">Create Role</div>
                <div class="card-body bg-light">
                    <div class="form-group">
                        <label asp-for="RoleName"></label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button style="width:auto" type="submit" class="btn btn-danger">Create Role</button>
            </div>
        </form>
    </div>
</div>