@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}

<a asp-action="ListRoles" asp-controller="Admin" class="btn btn-danger">Back</a>

<h2 class="text-center">Edit Role</h2>

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Update</button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-5">
    <div class="card-header bg-danger text-light">Users in this role</div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            @foreach (var user in Model.Users)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at the Moment</h5>
        }
    </div>    
</div>
<div class="text-center mt-3">
    <a asp-action="EditUsersInRole" asp-controller="Admin" asp-route-roleId="@Model.Id" style="width:auto" class="btn btn-danger">Add or Remove Users</a>
</div>